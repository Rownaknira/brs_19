<h1><%= t ".title" %></h1>

<table class="table">
  <thead>
    <th><%= t ".name" %></th>
    <th><%= t ".email" %></th>
    <th><%= t ".role" %></th>
  </thead>
  <% @users.each do |user| %>
    <tr>
      <td>
        <%= link_to user.name, user %>
      </td>
      <td><%= user.email %></td>
      <td><%= user.role %></td>
    </tr>
  <% end %>
</table>