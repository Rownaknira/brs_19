<div class="row">
  <h1 class="text-capitalize"><%= t ".all_categories" %></h1>
  <br>
  <table class="table table-striped">
    <thead>
    <tr>
      <th><%= t ".name" %></th>
    </tr>
    </thead>
    <% @categories.each do |category|%>
      <tr>
        <td><%= link_to category.name, category_path(category) %></td>
      </tr>
    <% end %>
  </table>
</div>
