<div class="panel panel-info">
  <div class="panel-heading">
    <h3 class="panel-title"><%= t ".edit_review" %></h3>
  </div>
  <div class="panel-body">
    <%= form_for [@review.book, @review] do |f| %>
      <div class="form-group">
        <%= f.label :content %>
        <%= f.text_area :content, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :rating %>
        <%= f.hidden_field :rating, id: "edit_rating_review" %>
        <div id="edit_rating_for_review" data-rating="<%= @review.rating %>">
        </div>
      </div>
      <center><%= f.submit t(".submit"), class: "btn btn-primary" %></center>
    <% end %>
  </div>
</div>